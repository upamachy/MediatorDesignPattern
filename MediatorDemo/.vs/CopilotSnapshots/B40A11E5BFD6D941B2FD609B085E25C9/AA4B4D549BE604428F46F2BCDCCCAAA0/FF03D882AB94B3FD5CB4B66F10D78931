using DemoLibrary.Models;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;

namespace DemoLibrary.DataAccess
{
    public class DemoDataAccess : IMongoDataAccess
    {
        private static List<PersonModel> _people = new();

        public DemoDataAccess()
        {
            if (_people.Count == 0)
            {
                _people.Add(new PersonModel { Id = "1", FirstName = "John", LastName = "Doe" });
                _people.Add(new PersonModel { Id = "2", FirstName = "Jane", LastName = "Smith" });
            }
        }

        public Task<List<PersonModel>> GetPeopleAsync()
        {
            return Task.FromResult(_people);
        }

        public Task<PersonModel> GetPersonByIdAsync(string id)
        {
            return Task.FromResult(_people.FirstOrDefault(x => x.Id == id));
        }

        public Task<PersonModel> InsertPersonAsync(string firstName, string lastName)
        {
            var person = new PersonModel
            {
                Id = (_people.Count + 1).ToString(),
                FirstName = firstName,
                LastName = lastName
            };
            _people.Add(person);
            return Task.FromResult(person);
        }
    }
}
