@using Microsoft.AspNetCore.Components.Authorization
@using BlazorUI.Services
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IAuthService AuthService
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <div class="d-flex align-items-center">
            <span class="me-3">Welcome, @context.User.Identity?.Name!</span>
            <button class="btn btn-outline-danger btn-sm" @onclick="HandleLogout">Logout</button>
        </div>
    </Authorized>
    <NotAuthorized>
        <div>
            <a href="/login" class="btn btn-primary btn-sm me-2">Login</a>
            <a href="/register" class="btn btn-outline-primary btn-sm">Register</a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        
        if (AuthenticationStateProvider is CustomAuthenticationStateProvider customProvider)
        {
            await customProvider.LogoutAsync();
        }
        
        Navigation.NavigateTo("/");
    }
}